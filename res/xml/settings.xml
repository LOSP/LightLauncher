<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <Preference
        android:title="@string/settings_interface">
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="us.shandian.launcher"
                android:targetClass="us.shandian.launcher.settings.InterfaceActivity"/>
    </Preference>
    
    <Preference
        android:title="@string/settings_effects">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="us.shandian.launcher"
            android:targetClass="us.shandian.launcher.settings.EffectsActivity"/>
    </Preference>
    
    <Preference
        android:title="@string/settings_about">
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="us.shandian.launcher"
                android:targetClass="us.shandian.launcher.settings.AboutActivity"/>
    </Preference>
    
    <Preference
        android:key="settings_restart"
        android:title="@string/settings_restart"/>

</PreferenceScreen>

